                <label>아이디 :
                    <input type="text" name="loginId" required style="width: 150px;"><br>
                <label>비밀번호 :
                    <input type="password" name="loginPw" required style="width: 150px;">
                </label><br><br>
                
                
                    </div>
                </div>
            </div>
        
            <p id="form_info1"></p>
            <button type="button" onclick="sendGet()">로그인</button>
