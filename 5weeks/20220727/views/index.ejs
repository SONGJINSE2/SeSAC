<html>
    <head>
        <title>Axios</title>
        
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <script>
            function sendPost(){
                axios({
                    method:"post",
                    url:"http://localhost:8080/receive",
                    data:{
                        name: "codee"
                    }
                // }).then((response) => { console.log( response ); });
                }).then((a) => { console.log(a); return a.data; })
                .then((d) => { 
                    alert( d.message ); 
                });
            } //Get에는 data가 아니고 params로 보내야한다.
            function sendGet(){
                axios({
                    method:"get",
                    url:"http://localhost:8080/receive",
                    params:{
                        name: "codee"
                    }
                // }).then((response) => { console.log( response ); });
                }).then((a) => { return a.data; })
                .then((d) => { 
                    alert( d.message ); 
                });
            }
            function sendForm(){
                var form = document.getElementById("form_info");
                console.log( form );

                var result = form.checkValidity(); //checkValidity는 전부다 확인해서 하나라도 통과못하면 false, 다 통과해야 true 
                if ( !result ){
                    form.reportValidity(); //reportValidity는 이 입력란을 작성하세요와 같이 뜨게 하는 명령어

                    return false;
                }
                console.log( result );

                // console.log( form.name.value );
                // console.log( form.age.value );

                // axios({
                //     method:"post",
                //     url:"http://localhost:8080/receive",
                //     data:{
                //         name: form.name.value
                //     }
                // }).then((a) => { return a.data; })
                // .then((d) => { 
                //     alert( d.message ); 
                // });
            }
        </script>
    </head>
    <body>
        
        <button type="button" onclick="sendGet()">버튼</button>
        <button onclick="sendGet();">sendGet</button>
        <form action="/receive">
            <!-- <button type="button" onclick="sendPost()">버튼</button>
        </form>
        <button onclick="sendPost();">sendPost</button> -->

        <form id="form_info">
            <input type="text" name="name" required>
            <input type="text" name="age" required>
            <button type="button" onclick="sendForm()">sendForm</button>
        </form>
    </body>
</html>